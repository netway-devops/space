RewriteCond $1 !\.(gif|jpe?g|png|js|css|ico|woff|ttf)$ [NC]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?/$1 [L]


