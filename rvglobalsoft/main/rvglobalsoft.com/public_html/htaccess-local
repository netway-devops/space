RewriteCond %{REQUEST_URI} ^/support/?$
RewriteRule .* http://hostbill.rvglobalsoft.net/knowledgebase/ [R=301,L]

# KB Redirect
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule ssl\-certificates http://hostbill.rvglobalsoft.net/knowledgebase/category/4/ssl/ [L,R=301]
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule cpanel\-license http://hostbill.rvglobalsoft.net/knowledgebase/category/3/general-questions/ [L,R=301]
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule rvsitebuilder http://hostbill.rvglobalsoft.net/knowledgebase/category/31/rvsitebuilder/ [L,R=301]
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule rvskin http://hostbill.rvglobalsoft.net/knowledgebase/category/22/rvskin/ [L,R=301]
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule vdo http://hostbill.rvglobalsoft.net/knowledgebase/category/33/the-use-of-rvsitebuilder-program/ [L,R=301]

RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule rvssl http://hostbill.rvglobalsoft.net/knowledgebase/category/4/rvssl/ [L,R=301]
RewriteCond %{REQUEST_URI} ^/kb/
RewriteRule rvlogin http://hostbill.rvglobalsoft.net/knowledgebase/category/47/rvlogin/ [L,R=301]
