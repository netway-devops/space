{foreach from=$cf.items item=cit}
<tr>
    <td><b>{$cf.name}</b></td>
    <td>
        <input name="fupgrade[{$cf.id}][new_config_id]"  value="{$cit.id}" type="hidden" />
        <b>{$cf.qty}</b> {if $cit.name || $cit.price>0}x{/if} {if $cit.name}{$cit.name}{/if} 
        {if $cit.price>0} {$cit.price|price:$currency} {/if}{if $cit.prices}<span id="custom_slider_price{$cit.id}"> </span>{/if}
    </td>
    <td align="center">
        <input name="fupgrade[{$cf.id}][new_qty]"  value="{$cf.qty}"  class="inp styled" size="3"/>
        {if $cit.name || $cit.price>0}x{/if} {if $cit.name}{$cit.name}{/if} {if $cit.price>0} {$cit.price|price:$currency} {/if}
        <script type="text/javascript">
        {if $cit.prices}
            $(function(){literal}{{/literal}
            var prices = [], scheme = '{$cit.scheme}';
        {foreach from=$cit.prices item=prices key=back}{if $prices.qty<=$cf.qty}prices.push('{$prices[$cit.recurring]|price:$currency}');{/if}{/foreach}
            $('#custom_slider_price{$cit.id}').text(scheme == 'tiered' ? 'x ' + prices[prices.length-1] : ' ( '+prices[prices.length-1]+' )');
        {literal}});{/literal}{/if}
        </script>
    </td>
</tr>
{/foreach}
